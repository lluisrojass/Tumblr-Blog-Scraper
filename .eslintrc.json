{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "settings": {
        "version": "16.2"
    },
    "plugins": [
        "react",
        "babel",
        "import",
        "flowtype"
    ],
    "rules": {
        "indent": [
            "error",
            2,
            {"SwitchCase": 1}
        ],
        "import/order": [
            "error",
            {
                "groups": [ 
                    "internal", 
                    "builtin",
                    "external",
                    "index", 
                    "sibling",
                    "parent"
                ]
            }
        ],
        "flowtype/use-flow-type": 1,
        "flowtype/valid-syntax": 1,
        "flowtype/define-flow-type": 1,
        "react/display-name": "off",
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}